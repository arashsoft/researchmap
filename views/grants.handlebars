
<!--#######################################################################################################-->
<!--                           This contains the hidden content for lightbox                               -->

<!-- starting choice-->
<div style='display:none'>
  <div id='VRchoice' class='GrantVRchoice' style='padding:10px; background:#fff;'>
    <p class="textcenter">Choose a starting visualization</p>
    <img src="img/sankey.png" class="left" id="sankeychoice"></img>
    <img src="img/bubble.png" class="left" id="bubblechoice"></img>
    <img src="img/treemap.png" class="right" id="treemapchoice"></img>
  </div>
</div>

<!--                                   end of hidden content for lightbox                                  -->
<!--#######################################################################################################-->

<div class="vizarea group">
  <div id="vizcontainer">
    <img id="vizloader" src="img/viz-loader.gif" style="display: none;"></img>
    <div id="sankeyviz"  style="display: none;">
      <div id="sankeybar">
        <img src="img/zoomin.png"></img>
        <img src="img/zoomout.png"></img>
        <div class="ui-widget">
          <input id="tags" />
        </div>
        <button id="networkreset">reset</button>
      </div>
    </div>
    <div id="treemapviz"  style="display: none;">
      <div id="treemapbar">
        <img src="img/zoomin.png"></img>
        <img src="img/zoomout.png"></img>
        <div class="ui-widget">
          <input id="tags" />
        </div>
        <button id="networkreset">reset</button>
      </div>
      <div id="treemaplegend">
      </div>
    </div>  
    <div id="bubbleviz"  style="display: none;">
      <div id="bubblebar">
        <img src="img/zoomin.png"></img>
        <img src="img/zoomout.png"></img>
        <div class="ui-widget">
          <input id="tags" />
        </div>
        <button id="networkreset">reset</button>
      </div>
      <div id="cloningArea">
        <h2>Clone</h2>
      </div>
      <div id="barComparingArea">
        <h2>Grants</h2>
        <div style="display:inline-block; float:left">
        <ul class="actionlist"> 
          <li>
            <input type="radio" name="chartchoice" value="individual" id="individualbar" checked></input>
            <label for="individualbar">individual</label>
          </li>
          <li>
            <input type="radio" name="chartchoice" value="group" id="groupbar"></input>
            <label for="groupbar">group</label>
          </li>
        </ul>
        </div>
        <div style="float: right">
          <span>X-Axis</span>
          <select id="xvaluechoice" class="chzn-select" style="width: 100%;"> 
            <option value="sponsor" selected>Sponsor</option>
            <option value="department">Department</option>
          </select>
          <span>Y-Axis</span>
          <select id="yvaluechoice" class="chzn-select" style="width: 100%;"> 
            <option value="number" selected>Numbers</option>
            <option value="amount">Amounts</option>
          </select>
        </div>
        <button id="sortBars" style="height: 2em; float: left; left: 52%">sort</button>
      </div>
      <div id="lineComparingArea">
        <h2>Grants</h2>
        <div style="display:inline-block; float:left">
          <span>Stream</span>
          <select id="streamchoiceLine" class="chzn-select" style="width: 100%;"> 
            <option value="sponsor" selected>Sponsor</option>
            <option value="department">Department</option>
          </select>
          <span>Y-Axis</span>
          <select id="yvaluechoiceLine" class="chzn-select" style="width: 100%;"> 
            <option value="number" selected>Numbers</option>
            <option value="amount">Amounts</option>
          </select>
        </div>
        <div style="height: 25px; width: 1px; visibility: hidden; float: left"></div>
        <button id="foldLegend" style="height: 2em; margin-left: 5px">unfold legend</button>
        <div class="nvd3"><div id="legendDiv" class="nv-legendWrap" style="width:1000px; float: left"></div></div>
        <div style="display:inline-block; float:right">
          <button id="backComparing" style="height: 2em">back</button>
        </div>
      </div>
      <div id="selectionArea">
        <h2>selections</h2>
        <div style="width:100%; display:block; margin:auto; padding-bottom:15px; display:none;">
          <button id="itemsChooseAll" style="height: 2em; left:15%;">choose all</button>       
          <button id="itemsChooseNone" style="height: 2em; left:20%;">choose none</button>
        </div>
        <div style="width:100%; padding-bottom:15px; display:none">
          <button id="itemsLinechart" 
          style="margin: 5px; height: 2em; margin:auto; left: 15%;">line chart</button>
          <button id="itemsBarchart" 
          style="margin: 5px; height: 2em; margin:auto; left: 25%;">bar chart</button>
        </div>         
        <ul id="selectionList"></ul>
      </div>      
    </div>    
  </div>


  <div id="actionpaneltoggle">
    <p>></p>
  </div>   
  <div id="actionpanel">
    <h2>Action Panel</h2>
<!--         <p>Listed below are the actions that are available for the displayed visualization.</p>
-->      
    <div id="sankeyactions">
      <h3>filter</h3><img src="img/info.png"></img><hr>
      <div class="action">
        <p>sources</p>
        <select id="filtersources" data-placeholder="Click to add sources" style="width:100%;" multiple class="chzn-select" tabindex="8">
            <option value=""></option>
        </select>
        <p>targets</p>
        <select id="filtertargets" data-placeholder="Click to add targets" style="width:100%;" multiple class="chzn-select" tabindex="8">
            <option value=""></option>
        </select>                   
        <p>years</p>
          <label for="sankeyyearbegin">start date</label>
          <input type="text" id="sankeyyearbegin" style="border: 0; color: #f6931f; font-weight: bold;" />

        <div id="sankeyyearbeginrange">
        </div>
          <label for="sankeyyearend">end date</label>
          <input type="text" id="sankeyyearend" style="border: 0; color: #f6931f; font-weight: bold;" />
        <div id="sankeyyearendrange">
        </div>          
      </div>

      <h3>fragmentation level</h3><img src="img/info.png"></img><hr>
      <div class="action">
          <label for="sankeyfrag">fragmentation level</label>
          <input type="text" id="sankeyfrag" value="Faculty" style="border: 0; color: #f6931f; font-weight: bold;"/>
        <div id="sankeyfragslider">
        </div>
      </div>
      <h3>translate</h3><img src="img/info.png"></img><hr>
      <div class="action">  
        <select id="sankeytranslate" data-placeholder="Translate to..." class="chzn-select" style="width:250px;" tabindex="4">
          <option value=""></option>
          <option value="treemap">treemap</option>
          <option value="bubble">bubble diagram</option>
        </select>
      </div>        
    </div>

    <div id="treemapactions">
      <h3>arrange</h3><img src="img/info.png"></img><hr>
      <div class="action">
        <p>sort and categorize according to</p>        
        <select id="arrangetreemap" class="chzn-select" style="width:50%;"> 
          <option value="department" selected>Department</option>
          <option value="sponsor">Sponsor</option>
        </select>
      </div>

      <h3>filter</h3><img src="img/info.png"></img><hr>
      <div class="action">        

        <p>grant status</p>
        <ul class="actionlist"> 
          <li>
            <input type="checkbox" checked id="treemapFilterAccepted"></input> 
            <label for="treemapFilterAccepted">accepted</label>
          </li>  
          <li>
            <input type="checkbox" checked id="treemapFilterClosed"></input> 
            <label for="treemapFilterClosed">closed</label>
          </li>
          <li>
            <input type="checkbox" checked id="treemapFilterDeclined"></input> 
            <label for="treemapFilterDeclined">declined</label>
          </li>
          <li>
            <input type="checkbox" checked id="treemapFilterOthers"></input> 
            <label for="treemapFilterOthers">others</label>
          </li>
        </ul>

        <p>years</p>
        <label for="treemapbeginyear">begin year:</label>
        <input type="text" id="treemapbeginyear" style="border: 0; color: #f6931f; font-weight: bold;" />
        <div id="treemapbeginyearrange">
        </div>
        <label for="treemapendyear">end year:</label>
        <input type="text" id="treemapendyear" style="border: 0; color: #f6931f; font-weight: bold;" />
        <div id="treemapendyearrange">
        </div>

      </div>  

      <h3>translate</h3><img src="img/info.png"></img><hr>
      <div class="action">  
        <select id="treemaptranslate" data-placeholder="Translate to..." class="chzn-select" style="width:250px;" tabindex="4">
          <option value=""></option>
          <option value="sankey">flow diagram</option>
          <option value="bubble">bubble diagram</option>
        </select>
      </div>
    </div>  

    <div id="bubbleactions">
      <h3>arrange</h3><img src="img/info.png"></img><hr>
      <div class="action">        
          <select id="arrangebubble" class="chzn-select" style="width:75%;" tabindex="1"> 
            <option value="random" selected>Random</option>
            <option value="department">Department</option>
            <option value="grantvalue">Grant Value</option>
          </select>
      </div>

      <h3>filter</h3><img src="img/info.png"></img><hr>
      <div class="action">        

        <p>grant status</p>
        <ul class="actionlist"> 
          <li>
            <input type="checkbox" checked id="filterAccepted"></input> 
            <label for="filterAccepted">accepted</label>
          </li>  
          <li>
            <input type="checkbox" id="filterClosed"></input> 
            <label for="filterClosed">closed</label>
          </li>
          <li>
            <input type="checkbox" id="filterDeclined"></input> 
            <label for="filterDeclined">declined</label>
          </li>
          <li>
            <input type="checkbox" id="filterOthers"></input> 
            <label for="filterOthers">others</label>
          </li>
        </ul>

        <p>years</p>
        <label for="grantdeadlineyear">deadline:</label>
        <input type="text" id="grantdeadlineyear" style="border: 0; color: #f6931f; font-weight: bold;" />
        <div id="grantdeadlineyearrange">
        </div>
        <div id="bubbleFilterTips" style="color: rgb(185,185,185); padding-top: 10px;">The begin and end year filters are only available for accepted and closed grants.</div>
        <div id="bubbleSliderAcceptedType">
          <label for="grantbeginyear">begin year:</label>
          <input type="text" id="grantbeginyear" style="border: 0; color: #f6931f; font-weight: bold;" />
          <div id="grantbeginyearrange">
          </div>
          <label for="grantendyear">end year:</label>
          <input type="text" id="grantendyear" style="border: 0; color: #f6931f; font-weight: bold;" />
          <div id="grantendyearrange">
          </div>
        </div>

      </div>  

      <h3>fragmentation</h3><img src="img/info.png"></img><hr>
      <div class="action">
          <select id="fragmentationbubble" class="chzn-select" style="width:75%;" tabindex="1"> 
            <option value="individual" selected>individual</option>
            <option value="department">department</option>
          </select>        
      </div>

      <h3>select</h3><img src="img/info.png"></img><hr>
      <div class="action">
        <ul class="actionlist"> 
          <li>
            <input type="radio" name="iCheck" id="selectNone" checked></input> 
            <label for="selectNone">none</label>
          </li>
          <li>
            <input type="radio" name="iCheck" id="selectLasso"></input>
            <label for="selectLasso">group (lasso)</label>
          </li>
          <li>
            <input type="radio" name="iCheck" id="selectIndividual"></input>
            <label for="selectIndividual">individual</label>
          </li>            
        </ul>
        <div id="bubbleselectactions">
          <hr>
          <button id="selectionClone" style="margin: 10px auto; display:block;">clone selections</button>
          <button id="selectionRemove" style="margin: 10px auto; display:block;">reset</button>  
          </div>    
      </div>    

      <h3>translate</h3><img src="img/info.png"></img><hr>
      <div class="action">  
        <select id="bubbletranslate" data-placeholder="Translate to..." class="chzn-select" style="width:250px;" tabindex="4">
          <option value=""></option>
          <option value="sankey">flow diagram</option>
          <option value="treemap">treemap</option>
        </select>
      </div>
    </div>           
  </div>
</div>

{{#scripts}}
<script type="text/javascript" src="js/modules/{{.}}.js"></script>
{{/scripts}}