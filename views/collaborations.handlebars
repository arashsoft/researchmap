            <label for="matrixFilterOR" style="margin:0% 12% 0% 3%; line-height:1.5">UNION</label> 
            <label for="matrixFilterAND" style="margin:0% 15% 0% 23.5%">(AND)</label>
            <label for="matrixFilterOR" style="margin:0% 15% 0% 11.5%">(OR)</label>   
          </div>
          <div id="matrixFilterTypeSingle"> 
            <hr style="margin: 20px 0px">          
            <input type="radio" name="matrixFilterSingleType" id="matrixFilterEXCLUSIVE"></input>
            <input type="radio" name="matrixFilterSingleType" id="matrixFilterINCLUSIVE" checked></input>
            <br>
            <label for="matrixFilterAND" style="margin:0% 5% 0% 16%; line-height:1.5">EXCLUSIVE</label>
            <label for="matrixFilterOR" style="margin:0% 10% 0% 9%; line-height:1.5">INCLUSIVE</label>   
          </div>          
      </div>

        <h3>translate</h3><hr>
        <div class="action">
          <select id="translatematrix" class="chzn-select" style="width:90%;">
            <option value="matrix" selected>matrix (current)</option>
            <option value="network">network</option>
            <option value="bar">bar graph</option>
          </select><br> 
        </div>
    </div>
